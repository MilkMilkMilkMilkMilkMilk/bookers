<h1>Books</h1>
<% @books.each do |book| %>
  <p>Title</p>
  <p>Body</p>

  <span>
    <%= book.title %>
    <%= book.body %>
    <p><a href="/books">show</a></p>
    <p><a href="/books">edit</a></p>
    <p><a href="/books">destroy</a></p>
  </span>
<% end %>

<h1>New Book</h1>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>

<% end %>